<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Your calendar links</h1>
    <%= link_to 'New calendar link', new_calendar_link_path, class: "py-3 px-5 border border-blue-600 bg-blue-600 hover:bg-blue-800 text-white block font-medium" %>
  </div>

  <div id="calendar_links" class="min-w-full">
    <%= render @calendar_links %>
  </div>
</div>
